<h1 style="text-align: center">Fill in the Order Details</h1>


<form class="orderform" method="POST">
<div class="ordertable" style="border: solid 2px orange; height:90%; width:100%;padding-top:50px;">
        <% include ./partials/messages.ejs   %>

        <table style="margin: 0 auto;">

<tr>
    <td>
            <label>Name</label>           

    </td>
    <td>
            <input 
            name="name"
             placeholder="Name"
              required="" 
              type="text"
              value="<%= typeof name != 'undefined'?name:'' %>"
              />
        
    </td>
</tr>
    <tr>
        <td>
                <label>Email</label>

        </td>
        <td>
                <input name="email"
                placeholder="Email" 
                required="" type="email" 
                value="<%= typeof email != 'undefined'?email:'' %>"
                />
        </td>
    </tr>


   
    <tr>
        <td>    <label>Phone No.</label>
        </td>
        <td>
                <input name="phone"
                placeholder="Phone No."
                 required="" type="text"
                 value="<%= typeof phone != 'undefined'?phone:'' %>"
                 />
                 
        </td>
    </tr>
                
      <tr>
          <td>    <label>Enter Your Sheet Size</label>
          </td>
          <td>
                <input name="sheet"
                placeholder="A!/A2/A3/A4."
                 required="" type="text"
                 value="<%= typeof sheet != 'undefined'?sheet:'' %>"
                 />

                 

    <!--
    <select id="sheet" value="<%= typeof sheet != 'undefined'?sheet:'' %>"
            >
        <option name="A2">A2</option>
        <option name="A3">A3</option>
        <option name="A4">A4</option> 
        
    </select>  -->
          </td>
      </tr>          
    
<tr>
    <td>
            <label>Select Your Sketch Type</label>

    </td>
    <td>
            <input name="kind"
            placeholder="Colored/BNW"
             required="" type="text"
             value="<%= typeof kind != 'undefined'?kind:'' %>"
             />
          <!-- <select id="kind" value="<%= typeof kind != 'undefined'?kind:'' %>"
               >
              <option name="Colored Sketch">Colored Sketch</option>
              <option name="Black &amp; White">Black &amp; White</option>
              <option name="Pen Sketch">Pen Sketch</option>
               </select> -->
    </td>
</tr>
   
<tr>
    <td>
            <label>Delivery date</label>

    </td>
    <td>
            <input name="date" required="" type="date" 
            value="<%= typeof date != 'undefined'?date:'' %>"
            />
            
    </td>
</tr>
        
<tr>
    <td>    <label>Description</label>
    </td>
    <td>

            <br><br>
            <textarea rows= "5" cols" name="info" 
            value="<%= typeof info != 'undefined'?info:'' %>"
    
            > </textarea>
    </td>
</tr>



    </table>
    <br><br>
    <input class="btn btn--orange"type="submit" value="Submit" />

    </div>


    </form>
</div>     
</div>
</div>
